{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2020"
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "baseUrl": "src",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./theme/src/**/*"
  ]
}